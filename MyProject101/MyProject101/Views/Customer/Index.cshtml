@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}



<table class="table table-striped">


    <tr>
        <thead>
            <th>#</th>
            <th>Müşteri İsmi</th>
            <th>Müşteri Şehri</th>
            <th></th>
        </thead>

        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.CustomerName</td>
                    <td>@item.City</td>
                    <td>
                        <a asp-controller="Customer" asp-action="DeleteCustomer" asp-route-id="@item.CustomerId" class="btn btn-danger">Sil</a>
                        <a asp-controller="Customer" asp-action="EditCustomer" asp-route-id="@item.CustomerId" class="btn btn-success">Güncelle</a>
                    </td>
                </tr>

            }
        </tbody>
    </tr>
</table>
