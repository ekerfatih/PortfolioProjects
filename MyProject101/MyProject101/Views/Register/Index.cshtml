@{
    Layout = null;
}
@model UserRegisterViewModel


<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Fatih Eker - Register</title>
        <link href="~/startbootstrap-sb-admin-gh-pages/css/styles.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    </head>
    <body class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Yeni Hesap Oluştur</h3></div>
                                    <div class="card-body">
                                        <form asp-controller="Register" asp-action="Index">
                                            <div class="row mb-3">
                                            <div asp-validation-summary="All"></div>
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input class="form-control" asp-for="Name" placeholder="Enter your first name" />
                                                        <label asp-for="Name">Adınız</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating">
                                                        <input class="form-control" asp-for="SurName" placeholder="Enter your last name" />
                                                        <label asp-for="SurName">Soyadınız</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" asp-for="Email" placeholder="name@example.com" />
                                                <label asp-for="Email">Email adresi</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" asp-for="UserName" placeholder="kullaniciadiniz" />
                                                <label asp-for="UserName">Kulanıcı Adı</label>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input class="form-control" asp-for="Password" placeholder="Create a password" />
                                                        <label asp-for="Password">Şifre</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm password" />
                                                        <label asp-for="ConfirmPassword">Şifre Tekrar</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mt-4 mb-0">
                                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                                <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Hesap Oluştur</button></div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a asp-controller="Login" asp-action="Index">Hesabın var mı? Giriş Yap!</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Fatih Eker @DateTime.Now.Year</div>
                            <div>
                                <a href="#">Gizlilik</a>
                                &middot;
                                <a href="#">Kurallar &amp; Şartlar</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/startbootstrap-sb-admin-gh-pages/js/scripts.js"></script>
    </body>
</html>
