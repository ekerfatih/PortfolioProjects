@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}



<table class="table table-striped">


    <tr>
        <thead>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Kategori</th>
            <th>Stok</th>
            <th>Sil/Güncelle</th>
        </thead>

        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductPrice</td>
                    <td>@item.ProductCategory.CategoryName</td>
                    <td>@item.Stock</td>
                    <td>
                        <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-danger">Sil</a>
                        <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.ProductId" class="btn btn-success">Güncelle</a>
                    </td>
                </tr>

            }
        </tbody>
    </tr>
</table>
